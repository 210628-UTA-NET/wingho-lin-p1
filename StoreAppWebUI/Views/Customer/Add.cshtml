@model StoreAppWebUI.Models.CustomerVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <h2 style= "bottom: 20px;">Add Customer</h2>    

    <form class="row g-3" asp-action="AddCustomer">
        <div class="col-mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="name" required="required">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-mb-3">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" id="phone-number" id="name" required="required">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" type="text" class="form-control" id="address" id="name" required="required">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="text" class="form-control" id="email" id="name" required="required">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-3" style="top: 15px;">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>

</body>
</html>