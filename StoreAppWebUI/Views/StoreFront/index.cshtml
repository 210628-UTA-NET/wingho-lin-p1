@model IEnumerable<StoreAppWebUI.Models.StoreVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr >
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("View Inventory", "View", new {p_storeID = item.ID}, new  {@class = "btn-secondary"})
                    </td>
                    <td>
                        @Html.ActionLink("Order History", "OrderOptions", new {p_storeID = item.ID}, new  {@class = "btn-secondary"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>